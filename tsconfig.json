  "compilerOptions": {
    "jsx": "react-jsx",         // Required for React 17+ (use "react" for React <17)
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src"]
}
